<h1>Welcome TO Hotel Booking</h1>
<p>Vacation starts with booking hotel</p>
<hr>

<% if flash[:message]%>
<div class="ui red message">!! <%=flash[:message]%> </div>
    <hr>
<%end%>

<div class="ui negative message transition hidden">
        <i class="close icon"></i>
        <div class="header">
          We're sorry we can't apply that discount
        </div>
        <p>That offer has expired
      </p></div>

<%= form_tag '/sessions', method: :post do %>
<div class="ui placeholder segment">
        <div class="ui two column very relaxed stackable grid">
          <div class="column">
            <div class="ui form">
              <div class="field">
                    <%= label_tag :username%>
                    <%= text_field_tag :email, nil,placeholder: "Email address" %>
              </div>
              <div class="field">
                    <%= label_tag :password%>
                    <%= password_field_tag :password, nil, placeholder: "Minimun 6 char"%>
              </div>
              <div class="ui blue submit button"><%= submit_tag "LOGIN"%></div>
            </div>
          </div>
          <div class="middle aligned column">
            <div class="ui big button">
              <i class="signup icon"></i>
              <%= link_to "SIGN UP", new_guest_path, method: :get%>
            </div>
          </div>
        </div>
        <div class="ui vertical divider">
          Or
        </div>
      </div>
      <%end%>
      <div class="ui star rating" data-rating="3"></div>
