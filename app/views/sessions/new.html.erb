<h1>Login Page</h1>
<p>Find me in app/views/session/new.html.erb</p>
<hr>
<% if flash[:message]%>
    <h2>!! <%=flash[:message]%> </h2>
<%end%>
<%= form_tag '/sessions', method: :post do %>
    <%= label_tag :username%>
    <%= text_field_tag :email, nil,placeholder: "Email address" %>
    <%= label_tag :password%>
    <%= password_field_tag :password, nil, placeholder: "Minimun 6 char"%>
    <%= submit_tag "LOGIN"%>
<%end%>
