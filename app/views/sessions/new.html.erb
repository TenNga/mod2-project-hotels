<div class="sessionHeading">
    <h1>Welcome To Hotel Booking</h1>
    <p>Vacation starts with booking a hotel</p>
</div>


    <div class="loginBox">
        <% if flash[:message]%>
        <div class="ui red message">!! <%=flash[:message]%> </div>
            <hr>
        <%end%>

        <%= form_tag '/sessions', method: :post do %>
        <div class="ui placeholder segment">
                <div class="ui two column very relaxed stackable grid">
                <div class="column">
                    <div class="ui form">
                    <div class="field">
                            <%= label_tag :username%>
                            <%= text_field_tag :email, nil,placeholder: "Email address" %>
                    </div>
                    <div class="field">
                            <%= label_tag :password%>
                            <%= password_field_tag :password, nil, placeholder: "Minimun 6 char"%>
                    </div>
                    <div class="ui blue submit button"><%= submit_tag "LOGIN", class: "login-submit"%></div>
                    </div>
                </div>
                <div class="middle aligned column">
                    <div class="ui big button">
                    <i class="signup icon"></i>
                    <%= link_to "SIGN UP", new_guest_path, method: :get%>
                    </div>
                </div>
                </div>
                <div class="ui vertical divider">
                Or
                </div>
            </div>
            <%end%>
    </div>

    

